<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <title>Write</title>
</head>
<body> 
    <h2 class="container mt-4"><strong>글 작성 페이지</strong></h2>
    <form action="/add" method="post">
      <div class="container mt-3">
        <div class="form-group"><p></p>
        
          <label>제목</label>
          <input type="text" name="title" class="form-control">


          <label>내용</label>
          <div id="imgarea" style="width: 300px; height: 200px;">
            <img id="View" src="#" style="width: 100%; height: 100%;"/><p></p>
          </div>
          <input type="text" name="content" class="form-control">
        </div><p></p>
        <form id="imgForm" action="/image" enctype="multipart/form-data" method="post">
          <input type="file" id="myFile" name="file1">
        <button type="submit" class="btn btn-outline-danger" onclick="ImgUpload()">저장</button>
        </form>
      </div>
    </form>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
</body>
<script src="http://madalla.kr/js/jquery-1.8.3.min.js"></script>

<script type="text/javascript">
$(function() {
    $("#myFile").on('change', function(){
    readURL(this);
    });
});
function readURL(input) {
    if (input.files && input.files[0]) {
        var reader = new FileReader();
        reader.onload = function (e) {
        $('#View').attr('src', e.target.result);
        }
        reader.readAsDataURL(input.files[0]);
    }
}

function ImgUpload(){
  document.getElementById('imgForm').submit()
}
</script>
</html>